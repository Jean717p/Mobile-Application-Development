<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mad18.nullpointerexception.takeabook">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera2" android:required="false"/>
    <uses-feature android:name="android.hardware.camera2.autofocus" android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mad18.nullpointerexception.takeabook.MainActivity">
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mad18.nullpointerexception.takeabook.showProfile"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"> <!--android:label="@string/title_activity_show_profile"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mad18.nullpointerexception.takeabook.editProfile"
            android:parentActivityName="com.mad18.nullpointerexception.takeabook.showProfile"
            android:label="@string/app_name"
            ><!--android:label="@string/title_activity_edit"-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mad18.nullpointerexception.takeabook.showProfile"/>
            <intent-filter>
                <action android:name="com.android.camera.action.CROP" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>