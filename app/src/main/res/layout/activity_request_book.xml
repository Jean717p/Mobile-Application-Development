<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/request_book_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:scrollbars="none"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/request_book_toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/request_book_main_image"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat ="@drawable/ic_thumbnail_cover_book" />

            <TextView
                android:id="@+id/request_book_label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/request_book_main_image"
                android:layout_marginTop="16dp"
                android:text="@string/info_book_label_title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/request_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/request_book_label_title"
                android:layout_alignTop="@id/request_book_label_title"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/request_book_label_title"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="4dp"
                android:textColor="@color/textColor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/request_book_label_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/info_book_label_owner"
                android:textSize="15sp"
                android:layout_toRightOf="@id/request_book_main_image"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/request_book_title"
                />
            <TextView
                android:id="@+id/request_book_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="4dp"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif-light"
                android:layout_alignBaseline="@id/request_book_label_owner"
                android:layout_alignTop="@id/request_book_label_owner"
                android:layout_toEndOf="@id/request_book_label_owner"
                android:textColor="@color/textColor"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/request_book_label_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/request_book_start_date"
                android:textSize="15sp"
                android:layout_toRightOf="@id/request_book_main_image"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/request_book_owner"
                />
            <TextView
                android:id="@+id/request_book_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="4dp"
                android:fontFamily="sans-serif-light"
                android:layout_alignBaseline="@id/request_book_label_start_date"
                android:layout_alignTop="@id/request_book_label_start_date"
                android:layout_toEndOf="@id/request_book_label_start_date"
                android:textColor="@color/textColor"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/request_book_label_end_date_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/request_book_label_end_date"
                android:textSize="15sp"
                android:layout_toRightOf="@id/request_book_main_image"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/request_book_start_date"
                android:visibility="invisible"
                />



            <TextView
                android:id="@+id/request_book_end_date_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="4dp"
                android:fontFamily="sans-serif-light"
                android:layout_alignBaseline="@id/request_book_label_end_date_owner"
                android:layout_alignTop="@id/request_book_label_end_date_owner"
                android:layout_toEndOf="@id/request_book_label_end_date_owner"
                android:textColor="@color/textColor"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="13sp"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/request_book_label_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/request_book_status"
                android:textSize="15sp"
                android:layout_toRightOf="@id/request_book_main_image"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:layout_below="@id/request_book_end_date_owner"
                />

            <TextView
                android:id="@+id/request_book_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="4dp"
                android:fontFamily="sans-serif-light"
                android:layout_alignBaseline="@id/request_book_label_status"
                android:layout_alignTop="@id/request_book_label_status"
                android:layout_toEndOf="@id/request_book_label_status"
                android:textColor="@color/textColor"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="13sp"
                />




            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/request_book_label_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/request_book_status"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="16dp"
                android:layout_centerHorizontal="true"
                app:errorColor="#ddaa00"
                app:hasClearButton="true"
                app:helperTextColor="@color/colorAccent"
                app:labelText="@string/request_book_label_text_message"
                app:maxCharacters="300"
                app:panelBackgroundColor="@android:color/transparent"
                app:primaryColor="@color/colorAccent">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/request_book_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="15"
                    android:imeOptions="actionSearch"
                    />
            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <!-- QUESTA è LA COPPIA TEXTVIEW LABEL E TEXTVIEW DEL MESSAGGIO RICEVUTO !-->
            <TextView
                android:id="@+id/request_book_label_tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/colorAccent"
                android:text="@string/message"
                android:visibility="invisible"
                android:layout_below="@id/request_book_status"/>

            <TextView
                android:id="@+id/request_book_tv_message"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/request_book_label_tv_message"/>

            <Button
                android:id="@+id/request_book_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:background="@drawable/corner_button"
                android:gravity="center"
                android:textStyle="normal|bold"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:layout_below="@id/request_book_label_message"
                android:layout_margin="16dp"
                />
            <Button
                android:id="@+id/request_book_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                android:background="@drawable/corner_button"
                android:textStyle="normal|bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_below="@id/request_book_label_message"
                android:layout_toRightOf="@id/request_book_cancel"
                android:layout_margin="16dp"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>


