<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".searchBook.SearchBookAlgolia">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/search_app_bar"
        app:expanded="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

   <android.support.v7.widget.Toolbar
        android:id="@+id/search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?android:attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/search_book_algolia_searchBar"
        style="@style/MaterialSearchBarLight"
        android:layout_margin="16dp"
        app:mt_placeholderColor="@color/colorPrimary"
        app:mt_highlightedTextColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:mt_maxSuggestionsCount="10" />
</android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/search_app_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/search_book_algolia_ImageView"
                android:layout_width="187dp"
                android:layout_height="147dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:clickable="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_scanbarcode" />

        </RelativeLayout>
    </ScrollView>




</RelativeLayout>