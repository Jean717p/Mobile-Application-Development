<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="7dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    android:layout_marginBottom="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/info_book_main_image"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="41dp"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_book_cover" />


        <Button
            android:id="@+id/info_book_request_book_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/info_book_main_image"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/corner_button"
            android:clickable="false"
            android:text="@string/info_book_request_this_book"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/info_book_map_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/info_book_request_book_button"
            android:layout_margin="8dp"
            android:background="@drawable/corner_button"
            android:layout_gravity="center"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/display_search_on_map_map"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/info_book_label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="8dp"
            android:layout_marginTop="48dp"
            android:layout_toRightOf="@id/info_book_main_image"
            android:fontFamily="sans-serif-light"
            android:text="@string/info_book_label_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/info_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/info_book_label_title"
            android:layout_alignTop="@id/info_book_label_title"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/info_book_label_title"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="4dp"
            android:textColor="@color/textColor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/info_book_label_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_book_title"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/info_book_main_image"
            android:fontFamily="sans-serif-light"
            android:text="@string/info_book_label_author"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/info_book_label_author"
            android:layout_alignTop="@id/info_book_label_author"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/info_book_label_author"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="4dp"
            android:textColor="@color/textColor"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/info_book_label_ISBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/info_book_toolbar"
            android:layout_below="@id/info_book_author"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/info_book_main_image"
            android:fontFamily="sans-serif-light"
            android:text="@string/info_book_label_ISBN"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_book_ISBN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/info_book_label_ISBN"
            android:layout_alignTop="@id/info_book_label_ISBN"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/info_book_label_ISBN"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="4dp"
            android:textColor="@color/textColor"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/info_book_label_editionYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/info_book_toolbar"
            android:layout_below="@id/info_book_ISBN"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/info_book_main_image"
            android:fontFamily="sans-serif-light"
            android:text="@string/info_book_label_edition_year"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_book_editionYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/info_book_label_editionYear"
            android:layout_alignTop="@id/info_book_label_editionYear"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/info_book_label_editionYear"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="4dp"
            android:textColor="@color/textColor"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/info_book_label_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/info_book_toolbar"
            android:layout_below="@id/info_book_editionYear"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/info_book_main_image"
            android:fontFamily="sans-serif-light"
            android:text="@string/info_book_label_publisher"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_book_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/info_book_label_publisher"
            android:layout_alignTop="@id/info_book_label_publisher"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/info_book_label_publisher"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="4dp"
            android:textColor="@color/textColor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/info_book_label_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/info_book_toolbar"
            android:layout_below="@id/info_book_publisher"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/info_book_main_image"
            android:fontFamily="sans-serif-light"
            android:text="@string/info_book_label_category"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_book_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/info_book_label_categories"
            android:layout_alignTop="@id/info_book_label_categories"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/info_book_label_categories"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="4dp"
            android:textColor="@color/textColor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/info_book_label_pages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/info_book_toolbar"
            android:layout_below="@id/info_book_categories"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/info_book_main_image"
            android:fontFamily="sans-serif-light"
            android:text="@string/info_book_label_pages"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_book_pages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/info_book_label_pages"
            android:layout_alignTop="@id/info_book_label_pages"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/info_book_label_pages"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="4dp"
            android:textColor="@color/textColor"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/info_book_label_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/info_book_toolbar"
            android:layout_below="@id/info_book_pages"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/info_book_main_image"
            android:fontFamily="sans-serif-light"
            android:text="@string/info_book_label_owner"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_book_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/info_book_label_owner"
            android:layout_alignTop="@id/info_book_label_owner"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/info_book_label_owner"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="4dp"
            android:text="Owner"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:textStyle="normal|bold" />

        <!--etichetta e contenuto Descrition-->

        <TextView
            android:id="@+id/info_book_label_book_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/info_book_toolbar"
            android:layout_below="@id/info_book_owner"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/info_book_main_image"
            android:fontFamily="sans-serif-light"
            android:text="@string/info_book_label_book_conditions"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_book_book_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/info_book_label_book_conditions"
            android:layout_alignTop="@id/info_book_label_book_conditions"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/info_book_label_book_conditions"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="4dp"
            android:textColor="@color/textColor"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/info_book_label_book_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/info_book_toolbar"
            android:layout_below="@id/info_book_book_conditions"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/info_book_main_image"
            android:fontFamily="sans-serif-light"
            android:text="@string/info_book_book_status"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_book_book_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/info_book_label_book_status"
            android:layout_alignTop="@id/info_book_label_book_status"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/info_book_label_book_status"
            android:paddingBottom="4dp"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:textStyle="bold|normal" />

        <TextView
            android:id="@+id/info_book_rating_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_book_book_status"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:text="4,6"
            android:textSize="13dp"
            android:layout_alignStart="@id/info_book_label_book_status"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/info_book_rating_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/info_book_rating_bar"
            android:layout_alignBaseline="@id/info_book_rating_bar"
            android:layout_below="@id/info_book_book_status"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/info_book_rating_bar"
            android:text="(120)"
            android:textSize="13dp"
            android:visibility="invisible" />

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/info_book_rating_bar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:layout_toRightOf="@id/info_book_rating_average"
            android:layout_below="@id/info_book_book_status"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:isIndicator="true"
            android:visibility="invisible" />

        <HorizontalScrollView
            android:id="@+id/info_book_horizontalScrollView_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_book_rating_bar"
            android:layout_margin="8dp">

            <LinearLayout
                android:id="@+id/info_book_list_photo_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

</android.support.v7.widget.CardView>