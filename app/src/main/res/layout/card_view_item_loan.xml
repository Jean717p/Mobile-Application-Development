<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/request_loan_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:padding="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/request_loan_cv_book_thumbnail"
            android:layout_width="53dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_thumbnail_cover_book" />

        <TextView
            android:id="@+id/request_loan_cv_book_title"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/request_loan_cv_book_thumbnail"
            android:layout_below="@+id/request_loan_cv_book_thumbnail"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:text="Book Title"
            android:textSize="13dp" />


        <TextView
            android:id="@+id/request_loan_cv_applicant_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/request_loan_cv_book_thumbnail"
            android:padding="3dp"
            android:text="@string/request_book_applicant"
            android:textSize="13dp"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:id="@+id/request_loan_applicant_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/request_loan_cv_book_thumbnail"
            app:srcCompat="@drawable/ic_baseline_person_24px" />

        <TextView
            android:id="@+id/request_loan_cv_applicant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_loan_cv_applicant_label"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="72dp"
            android:layout_toRightOf="@id/request_loan_cv_book_thumbnail"
            android:maxLines="2"
            android:text="Jeanpierre Francois"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/request_loan_cv_start_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_loan_cv_applicant"
            android:layout_marginStart="72dp"
            android:layout_toRightOf="@id/request_loan_cv_book_thumbnail"
            android:background="@android:color/white"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp"
            android:padding="3dp"
            android:text="Start date"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/request_loan_cv_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_loan_cv_start_date_label"
            android:layout_marginStart="72dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/request_loan_cv_book_thumbnail"
            android:background="@android:color/white"
            android:fontFamily="sans-serif"
            android:text="12-02-2018"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/request_loan_date_img_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_loan_cv_applicant"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/request_loan_cv_book_thumbnail"
            android:layout_marginStart="48dp"
            app:srcCompat="@drawable/ic_date"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/request_loan_date_img_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_loan_cv_start_date"
            android:layout_marginEnd="8dp"
            android:layout_toRightOf="@id/request_loan_cv_book_thumbnail"
            android:padding="5dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_date"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/request_loan_cv_end_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_loan_cv_start_date"
            android:layout_marginStart="32dp"
            android:layout_toRightOf="@id/request_loan_cv_book_thumbnail"
            android:padding="8dp"
            android:visibility="gone"
            android:text="End Date"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/request_loan_cv_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_loan_cv_end_date_label"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="32dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/request_loan_cv_book_thumbnail"
            android:padding="8dp"
            android:text="12-03-2018"
            android:textSize="13sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>