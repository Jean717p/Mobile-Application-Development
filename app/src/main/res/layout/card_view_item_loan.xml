<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content" android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:id="@+id/request_loan_card_view"
    android:layout_margin="7dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/request_loan_cv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/divider"
            android:layout_margin="8dp"
            android:layout_marginRight="-2dp"
            android:gravity="center"
            android:maxLines="2"
            android:padding="10dp"
            android:text="Empty for now"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/request_loan_cv_date"
            android:layout_width="371dp"
            android:layout_height="39dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/request_loan_cv_title"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/white"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="13sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>