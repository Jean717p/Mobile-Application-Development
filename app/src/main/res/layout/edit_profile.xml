<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


      <android.support.v7.widget.Toolbar
        android:id="@+id/edit_profile_toolbar"
        android:elevation="8dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:title="@string/app_name"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
          app:theme="@style/ThemeOverlay.AppCompat.Dark"

    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/edit_profile_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/edit_profile_personalPhoto"
                android:layout_width="@dimen/profile_photo_height"
                android:layout_height="@dimen/profile_photo_height"
                android:layout_margin="@dimen/fab_margin"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_account_circle_white_48px"
                app:civ_border_color="@color/textColor"
                app:civ_border_width="0dp" />

            <!--titolo username-->
            <TextView
                android:id="@+id/edit_profile_title_Username"
                android:text="@string/Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/edit_profile_personalPhoto"
                android:layout_alignRight="@id/edit_profile_personalPhoto"
                android:layout_below="@id/edit_profile_personalPhoto"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/profile_text_view_title"/>
            <!-- username-->
            <EditText
                android:id="@+id/edit_profile_Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/edit_profile_personalPhoto"
                android:layout_alignRight="@id/edit_profile_personalPhoto"
                android:gravity="center_horizontal"
                android:enabled="true"
                android:hint="@string/Username"
                android:layout_below="@id/edit_profile_title_Username"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textColorHint="@color/colorAccent"
                android:textSize="@dimen/text_view_height" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/edit_profile_personalPhoto"
                android:layout_margin="16dp">

                <!--titolo city-->
                <TextView
                    android:id="@+id/edit_profile_title_City"
                    android:text="@string/City"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/edit_profile_City"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/profile_text_view_title"/>
                <!--city-->
                <EditText
                    android:id="@+id/edit_profile_City"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/edit_profile_icon_City"
                    android:layout_below="@id/edit_profile_title_City"
                    android:enabled="true"
                    android:hint="@string/City"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/text_view_height" />
                <!--little icon near field city-->
                <ImageView
                    android:id="@+id/edit_profile_icon_City"
                    android:src="@drawable/ic_location_city_black_24px"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignBottom="@id/edit_profile_City"
                    android:layout_alignTop="@id/edit_profile_title_City"
                    android:layout_below="@id/edit_profile_title_City"
                    />

                <!--titolo mail-->
                <TextView
                    android:id="@+id/edit_profile_title_mail"
                    android:text="@string/Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_profile_City"
                    android:layout_toRightOf="@id/edit_profile_icon_mail"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/profile_text_view_title"/>
                <!-- mail-->
                <EditText
                    android:id="@+id/edit_profile_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_profile_title_mail"
                    android:layout_toRightOf="@id/edit_profile_icon_mail"
                    android:enabled="true"
                    android:hint="@string/Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/text_view_height"
                    />
                <!--little icon near field mail-->
                <ImageView
                    android:id="@+id/edit_profile_icon_mail"
                    android:src="@drawable/ic_email_black_24px"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignBottom="@id/edit_profile_mail"
                    android:layout_alignTop="@id/edit_profile_title_mail"
                    android:layout_below="@id/edit_profile_title_mail"
                    />

                <!--titolo about-->
                <TextView
                    android:id="@+id/edit_profile_title_about"
                    android:text="@string/AboutMe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_profile_mail"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/profile_text_view_title"/>
                <!--about-->
                <EditText
                    android:id="@+id/edit_profile_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edit_profile_title_about"
                    android:enabled="true"
                    android:gravity="top"
                    android:hint="@string/AboutMe"
                    android:inputType="textMultiLine"
                    android:maxLength="300"
                    android:scrollbars="vertical"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/text_view_height" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>