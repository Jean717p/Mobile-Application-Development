<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".BookFound"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/book_found_card_view"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/book_found_thumbnail"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/mariasemples" />

            <TextView
                android:id="@+id/book_found_label_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/book_found_thumbnail"
                android:text="Title:"
                android:textSize="20dp"
                android:textStyle="normal|bold"

                />

            <TextView
                android:id="@+id/book_found_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/book_found_label_title"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="-59dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/book_found_position"
                android:layout_toRightOf="@id/book_found_label_title"
                android:text="Harry Potter e la pietra filosofale"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/book_found_label_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_found_title"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/book_found_thumbnail"
                android:text="Author:"
                android:layout_alignBaseline="@id/book_found_author"
                android:textSize="20sp"
                android:textStyle="normal|bold" />


            <TextView
                android:id="@+id/book_found_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_found_title"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/book_found_label_author"
                android:text="J.K Rowling" />


            <TextView
                android:id="@+id/book_found_label_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/book_found_author"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/book_found_thumbnail"
                android:text="Position:"
                android:layout_alignBaseline="@id/book_found_position"
                android:textSize="20sp"
                android:textStyle="normal|bold" />


            <TextView
                android:id="@+id/book_found_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_found_author"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/book_found_label_position"
                android:text="Turin" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>