<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="63dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    android:layout_marginBottom="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/generic_info_book_image"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="41dp"
            android:padding="8dp"
            android:src="@drawable/ic_book_cover" />


        <TextView
            android:id="@+id/generic_info_book_label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="8dp"
            android:layout_marginTop="56dp"
            android:layout_toRightOf="@id/generic_info_book_image"
            android:fontFamily="sans-serif-light"
            android:text="@string/info_book_label_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/generic_info_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/generic_info_book_label_title"
            android:layout_alignTop="@id/generic_info_book_label_title"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/generic_info_book_label_title"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="4dp"
            android:textColor="@color/textColor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/generic_info_book_label_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/generic_info_book_title"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/generic_info_book_image"
            android:fontFamily="sans-serif-light"
            android:text="@string/info_book_label_author"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/generic_info_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/generic_info_book_label_author"
            android:layout_alignTop="@id/generic_info_book_label_author"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/generic_info_book_label_author"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="4dp"
            android:textColor="@color/textColor"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/generic_info_book_label_num_pages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/generic_info_book_author"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/generic_info_book_image"
            android:fontFamily="sans-serif-light"
            android:text="@string/info_book_label_book_num_pages"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/generic_info_book_num_pages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/generic_info_book_label_num_pages"
            android:layout_alignTop="@id/generic_info_book_label_author"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/generic_info_book_label_author"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="4dp"
            android:textColor="@color/textColor"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/generic_info_book_label_plot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/generic_info_book_image"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-light"
            android:text="Trama"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/generic_info_book_plot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/generic_info_book_label_plot"
            android:layout_below="@id/generic_info_book_label_plot"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/generic_info_book_label_author"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="4dp"
            android:textColor="@color/textColor"
            android:textSize="13sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>