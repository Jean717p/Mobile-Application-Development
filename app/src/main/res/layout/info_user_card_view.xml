<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="7dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    android:layout_marginBottom="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/info_user_photo_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/info_user_toolbar"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_account_circle_white_48px" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/info_user_username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_user_photo_profile"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/Username"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_alignTop="@+id/info_user_username_label"
            android:src="@drawable/ic_baseline_person_24px" />


        <TextView
            android:id="@+id/info_user_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_user_username_label"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:text="@string/Username"
            android:textColor="#424242"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/info_user_city_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_user_username"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:text="@string/City"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_user_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_user_city_label"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:text="City"
            android:textColor="#424242"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_alignTop="@+id/info_user_city_label"
            android:src="@drawable/ic_location_city_black_24px" />
       <!-- <TextView
            android:id="@+id/info_user_about_me_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_user_city"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:text="@string/AboutMe"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_alignTop="@+id/info_user_about_me_label"
            android:src="@drawable/ic_addbio" />


        <TextView
            android:id="@+id/info_user_about_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_user_about_me_label"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="8dp"
            android:text="Bio"
            android:textColor="#424242"
            android:textSize="14sp" />-->



    </RelativeLayout>

</android.support.v7.widget.CardView>