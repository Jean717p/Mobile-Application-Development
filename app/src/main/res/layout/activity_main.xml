<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?android:attr/actionBarSize"
        android:elevation="8dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:title="@string/app_name"

        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">



    <ImageView
        android:id="@+id/personalPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:visibility="visible"
        android:src="@drawable/ic_account_circle_white_48dp"
        android:background="@color/backgroundPhoto"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/personalPhoto"
        android:id="@+id/rellayedittexts"
        >
        <EditText
            android:id="@+id/Username"
            android:enabled="false"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_view_height"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Name"
            android:textColor="@color/textColor"
            android:textColorHint="@color/colorAccent"/>
        <Button
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:text="X"
            android:layout_toRightOf="@id/Username"
            android:layout_above="@id/City"
            android:visibility="invisible"
            android:enabled="false"
            android:background="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/City"
            android:layout_below="@id/Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="@dimen/text_view_height"
            android:textColor="@color/textColor"
            android:textColorHint="@color/colorAccent"
            android:enabled="false"
            android:maxLines="1"
            android:hint="City"
            />

        <EditText
            android:id="@+id/profile_mail"
            android:enabled="false"
            android:layout_below="@id/City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:hint="Email"
            android:textColor="@color/textColor"
            android:textColorHint="@color/colorAccent"
            android:textSize="18sp"

            />
        <EditText
            android:id="@+id/profile_about"
            android:enabled="false"
            android:layout_below="@id/profile_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:maxLength="20"
            android:lines="15"
            android:scrollbars = "vertical"
            android:hint="AboutMe"
            android:textColor="@color/textColor"
            android:textColorHint="@color/colorAccent"
            android:textSize="18sp"
            />
    </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>