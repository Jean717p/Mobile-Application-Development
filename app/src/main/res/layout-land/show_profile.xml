<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/show_profile_toolbar"
        android:minHeight="?android:attr/actionBarSize"
        android:elevation="8dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:title="@string/app_name"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/show_profile_personalPhoto"
        android:layout_width="@dimen/profile_photo_height"
        android:layout_height="@dimen/profile_photo_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:gravity="center_vertical"
        android:src="@drawable/userdefault"
        app:civ_border_color="@color/textColor"
        app:civ_border_width="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/show_profile_personalPhoto"
            android:layout_below="@id/show_profile_toolbar"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/show_profile_personalPhoto"
                android:layout_below="@id/show_profile_toolbar"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/show_profile_Username"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_view_height"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/textColor"
                    android:hint="Name"
                    android:textColorHint="@color/colorAccent"/>

                <TextView
                    android:id="@+id/show_profile_City"
                    android:layout_below="@id/show_profile_Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="@dimen/text_view_height"
                    android:textColorHint="@color/colorAccent"
                    android:enabled="false"
                    android:maxLines="1"
                    android:hint="City"
                    android:textColor="@color/textColor"
                    />


                <TextView
                    android:id="@+id/show_profile_mail"
                    android:enabled="false"
                    android:layout_below="@id/show_profile_City"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:hint="Email"
                    android:textSize="@dimen/text_view_height"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/colorAccent"
                    />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/show_profile_mail">

                    <TextView
                        android:id="@+id/show_profile_about"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@id/show_profile_mail"
                        android:enabled="false"
                        android:gravity="top"
                        android:hint="AboutMe"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:textColor="@color/textColor"
                        android:textColorHint="@color/colorAccent"
                        android:textSize="18sp" />
                </ScrollView>
            </RelativeLayout>
        </LinearLayout>

</RelativeLayout>