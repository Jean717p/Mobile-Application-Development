<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--Questa è la toolbar dove appare appName più l'icona salva o modifica-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/show_profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/show_profile_personalPhoto"
            android:layout_width="@dimen/profile_photo_width"
            android:layout_height="@dimen/profile_photo_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/ic_account_circle_white_48px"
            app:civ_border_color="@color/textColor"
            app:civ_border_width="@dimen/circle_image_border" />


        <TextView
            android:id="@+id/show_profile_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_toEndOf="@id/show_profile_personalPhoto"
            android:layout_marginStart="65dp"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            android:textColor="@color/textColor"
            android:layout_below="@id/show_profile_personalPhoto"
            android:textSize="20sp"/>



            <!--titolo city-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/show_profile_personalPhoto"
        android:layout_alignTop="@id/show_profile_personalPhoto"
        android:layout_margin="16dp"
        >


        <TextView
            android:id="@+id/show_profile_City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/textColor"
            android:textSize="@dimen/profile_text_view_content" />


        <TextView
            android:id="@+id/show_profile_title_City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="@string/City"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/profile_text_view_title" />
        <!--city-->


        <TextView
            android:id="@+id/show_profile_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:maxLines="1"
            android:textColor="@color/textColor"
            android:textSize="@dimen/profile_text_view_content" />


        <!--titolo mail-->
        <TextView
            android:id="@+id/show_profile_title_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="@string/Email"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/profile_text_view_title" />
        <!-- mail-->

        <!--titolo about-->
        <!--about-->
        <TextView
            android:id="@+id/show_profile_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:textColorHint="@color/colorAccent"
            android:textSize="@dimen/profile_text_view_content" />

        <TextView
            android:id="@+id/show_profile_title_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="@string/AboutMe"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/profile_text_view_title" />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>